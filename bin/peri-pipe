#!/usr/bin/perl

use 5.010;
use strict;
use warnings;

# VERSION

if ($ENV{AUTOMATIC_TESTING}) {
    warn "AUTOMATIC_TESTING is set to true. To avoid failing CPAN Testers ".
        "report, this script refuses to run under that env.\n";
    exit 0;
}

require Perinci::Access::Simple::Server::Pipe;
require Log::Any::App;
Log::Any::App::init();

Perinci::Access::Simple::Server::Pipe->new->run;

1;
#ABSTRACT: Default Riap::Simple server over pipe
#PODNAME: peri-pipe

=head1 SYNOPSIS

 # access the server
 % perl -MPerinci::Access -e'
     my $pa = Perinci::Access->new;
     my $res = $pa->request(call=>"riap+pipe:/path/to/peri-pipe////Foo/func",
                            {args=>{arg1=>1, arg2=>2}});'


=head1 SEE ALSO

L<Perinci::Access::Simple::Server::Pipe>

=cut
